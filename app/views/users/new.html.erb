<h1>Sign up here</h1>

<form action="/users" method="post">
  <label for="user_name">Choose username</label>
  <input type="text"
    name=user[username]
    id="user_name"
    value="<%= @user.username %>">
  <br>

  <label for="pass_word">Choose password</label>
  <input type="password"
    name=user[password]
    id="pass_word">

  <br>
  <input type="submit" value="<%= 'submit!!!' %>">
</form>
